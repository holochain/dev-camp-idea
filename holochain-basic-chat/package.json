{
  "name": "basic-chat",
  "version": "1.0.0",
  "description": "A chat demo for holochain",
  "main": "index.js",
  "scripts": {
    "hc:build-mac": "mkdir -p dna && cd dna-src && ../../mac/hc package --strip-meta -o ../dna/holo-chat.dna.json",
    "hc:start-mac": "mkdir -p tmp-storage && ../mac/holochain -c ./conductor-config.toml",
    "hc:test-mac": "cd dna-src && ../../mac/hc test",
    "hc:build-linux": "mkdir -p dna && cd dna-src && ../../linux/hc package --strip-meta -o ../dna/holo-chat.dna.json",
    "hc:start-linux": "mkdir -p tmp-storage && ../linux/holochain -c ./conductor-config.toml",
    "hc:test-linux": "cd dna-src && ../../linux/hc test",
    "hc:build-win-gnu": "mkdir -p dna && cd dna-src && ../../win-gnu/hc package --strip-meta -o ../dna/holo-chat.dna.json",
    "hc:start-win-gnu": "mkdir -p tmp-storage && ../win-gnu/holochain -c ./conductor-config.toml",
    "hc:test-win-gnu": "cd dna-src && ../../win-gnu/hc test",
    "hc:build-win-msvc": "mkdir -p dna && cd dna-src && ../../win-msvc/hc package --strip-meta -o ../dna/holo-chat.dna.json",
    "hc:start-win-msvc": "mkdir -p tmp-storage && ../win-msvc/holochain -c ./conductor-config.toml",
    "hc:test-win-msvc": "cd dna-src && ../../win-msvc/hc test"
      },
